  <%= submit_tag("Sumbit") %>
<% end %>


<h1> Form For </h1>

<%= form_for @user, url: user_index_path(@user) do |f| %>
  <%= f.label(:username, "Your Username Here") %>
  <%= f.text_field :username, placeholder: 'Example Username' %><br>
  <%= f.label(:email, "Email!!!") %>  
  <%= f.text_field :email, value: "Here" %><br>
  <%= f.label(:email, "Secret Phrase") %> 
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>