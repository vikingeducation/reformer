
<div class="container">
  <h1>Create new user</h1>

  <h3>HTML</h3>

  <form action="<%= user_index_path %>" method="post" accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" class="form-control" type="text" name="user[username]" value="">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" class="form-control" type="email" name="user[email]" value="">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" class="form-control" type="password" name="user[password]" value="">
    </div>

    <button class="btn btn-primary" type="submit" name="button">Submit</button>

  </form>

  <hr>

  <h3>form_tag</h3>

  <%= form_tag user_index_path, :method => :post do %>
    <div class="form-group">
      <%= label_tag "user[username]", "Username" %>
      <%= text_field_tag "user[username]", nil, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "user[email]", "Email" %>
      <%= text_field_tag "user[email]", nil, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "user[password]", "Password" %>
      <%= password_field_tag "user[password]", nil, :class => "form-control" %>
    </div>
    <%= button_tag "Submit", :class => "btn btn-primary" %>
  <% end %>

  <hr>

  <h3>form_for</h3>

  <%= form_for User.new, :url => user_index_path, :method => :post do |f| %>
    <% if @user.errors %>
      <% @user.errors.full_messages.each do |err| %>
        <p class="alert-danger"><%= err %></p>
      <% end %>
    <% end %>
  
    <%= f.label :username %>
    <%= f.text_field :username, :class => "form-control" %>
    <%= f.label :email %>
    <%= f.text_field :email, :class => "form-control" %>
    <%= f.label :password %>
    <%= f.password_field :password, :class => "form-control" %>
    <%= f.button "Submit", :class => "btn btn-primary" %>
  <% end %>

</div>
