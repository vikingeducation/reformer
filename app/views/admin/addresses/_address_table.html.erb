<table class="table-striped table-bordered">
  <thead class="thead-default">
  <th>ID</th>
  <th>User</th>
  <th>Address</th>
  <th>City</th>
  <th>State</th>
  <th>Orders</th>
  <th>Created</th>
  <th>SHOW</th>
  <th>EDIT</th>
  <th>DELETE</th>
  </thead>
  <tbody>
  <% addresses.each do |addy| %>
      <tr>
        <td><%= addy.id %></td>
        <td><%=link_to addy.user.first_name, admin_user_path(addy.user) %></td>
        <td><%= addy.street_1 %></td>
        <td><%= addy.city.name %></td>
        <td><%= addy.state.abbrev %></td>
        <td></td>
        <td><%= addy.created_at.strftime '%Y-%m-%d' %></td>
        <td><%= link_to 'show', admin_user_address_path(addy.user, addy) %></td>
        <td><%= link_to 'edit', edit_admin_user_address_path(addy.user, addy) %></td>
        <td><%= link_to 'delete',
                        admin_user_address_path(addy.user, addy),
                        method: :delete,
                        data: {
                            confirm: "You sure you wanna delete #{addy.user.first_name} address?"
                        } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>