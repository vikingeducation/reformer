<div class="row top-buffer">
  <h1 class="col-sm-12 text-center h2"><%= user.full_name %> address</h1>
</div>

<div class="row">
  <div class="col-sm-3"><h2 class="h5">Owner ID:</h2></div>
  <div class="col-sm-9"><p class="h5"><%= user.id %></p></div>
  <div class="col-sm-3"><h2 class="h5">Owner Name:</h2></div>
  <div class="col-sm-9"><p class="h5"><%= link_to "#{user.full_name} (click to view user)", admin_user_path(user) %></p></div>
</div>

<div class="row top-buffer">
  <div class="col-sm-3"><h2 class="h5">Street</h2></div>
  <div class="col-sm-9"><%= address.street_1 %></div>
  <div class="col-sm-3"><h2 class="h5">City</h2></div>
  <div class="col-sm-9"><%= address.city.name %></div>
  <div class="col-sm-3"><h2 class="h5">State</h2></div>
  <div class="col-sm-9"><%= address.state.name %></div>
  <div class="col-sm-3"><h2 class="h5">Zip</h2></div>
  <div class="col-sm-9"><%= address.post_code %></div>
</div>

<div class="row top-buffer">
  <div class="col-sm-12"><%= link_to 'Edit address',
                                     edit_admin_user_address_path(user, address) %>
  </div>
  <div class="col-sm-12"><%= link_to 'Delete address',
                                     admin_user_address_path(user, address),
                                     method: :delete,
                                     data: {
                                         confirm: "You sure you wanna delete #{user.first_name} address?"
                                     } %>
  </div>
</div>