<div class="row top-buffer">
  <h1 class="col-sm-12 h2 text-center">Product Categories</h1>
</div>

<div class="row top-buffer">
  <div class="col-sm-12">
    <%= link_to 'Add new category',
                new_admin_category_path,
                class: 'btn btn-block btn-primary',
                role: 'button' %>
  </div>
</div>
<div class="row top-buffer">
  <div class="col-sm-12">
    <table class="table table-striped table-bordered">
      <thead class="thead-default">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>SHOW</th>
          <th>EDIT</th>
          <th>DELETE</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= link_to 'show', admin_category_path(category) %></td>
            <td><%= link_to 'edit', edit_admin_category_path(category) %></td>
            <td><%= link_to 'delete',
                            admin_category_path(category),
                            method: :delete,
                            data: {
                                confirm: 'You sure you wanna delete this category, my friend?'
                            } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>