<div class="row top-buffer">
  <h1 class="col-sm-12 h2 text-center">
    Category <%= @category.id %>: <%= @category.name %>
  </h1>
</div>

<div class="row top-buffer">
  <div class="col-sm-3"><h3 class="h5">Category ID:</h3></div>
  <div class="col-sm-4"><h3 class="h5"><%= @category.id %></h3></div>
</div>

<div class="row">
  <div class="col-sm-3"><h3 class="h5">Name:</h3></div>
  <div class="col-sm-4"><h3 class="h5"><%= @category.name %></h3></div>
</div>

<div class="row">
  <div class="col-sm-4">
    <%= link_to 'Edit category', edit_admin_category_path %>
    <br>
    <%= link_to 'Delete category',
                admin_category_path(@category),
                method: :delete,
                data: {
                    confirm: 'You sure you wanna delete this category, my friend?'
                } %>
  </div>
</div>

<div class="row top-buffer">
  <div class="col-sm-6">
    <h3 class="h5">Products in <%= @category.name %>:</h3>

    <table class="table table-striped table-bordered">
      <thead class="thead-default">
      <tr>
        <th>ID</th>
        <th>Name</th>
      </tr>
      </thead>

      <tbody>
        <% @category.products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>