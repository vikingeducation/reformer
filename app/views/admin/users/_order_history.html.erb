<div class="row top-buffer border border-dark rounded">
  <div class="col-sm-12">
    <h2 class="h3 text-center"><u>Order history</u></h2>
  </div>
  <div class="col-sm-12">
    <table class="table table-striped table-bordered">
      <thead class="thead-default">
      <th>ID</th>
      <th>Order date</th>
      <th>Order value</th>
      <th>Status</th>
      <th>SHOW</th>
      <th>EDIT</th>
      <th>DELETE</th>
      </thead>
      <tbody>
      <% orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.date_placed %></td>
            <td><%= number_to_currency(order.total) %></td>
            <td class="text-uppercase <%= order.status_css %>"><%= order.status_text %></td>
            <td><%= link_to 'show', admin_user_order_path(user, order) %></td>
            <td><%= link_to 'edit', edit_admin_user_order_path(user, order) %></td>
            <td>
              <%= link_to 'delete',
                          admin_user_order_path(user, order),
                          method: :delete,
                          data: {
                              confirm: 'Ya sure?'
                          }
              %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>