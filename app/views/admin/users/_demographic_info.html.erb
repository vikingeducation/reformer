<div class="row top-buffer border border-dark rounded">
  <div class="col-sm-12">
    <h2 class="h3 text-center"><u>Demographic information</u></h2>
  </div>

  <div class="col-sm-3 top-buffer"><h3 class="h5">First name:</h3></div>
  <div class="col-sm-9 top-buffer"><p><%= user.first_name %></p></div>
  <div class="col-sm-3"><h3 class="h5">Last name:</h3></div>
  <div class="col-sm-9"><p><%= user.last_name %></p></div>
  <div class="col-sm-3"><h3 class="h5">Email:</h3></div>
  <div class="col-sm-9"><p><%= user.email %></p></div>
  <div class="col-sm-3 top-buffer"><h3 class="h5">Telephone:</h3></div>
  <div class="col-sm-9 top-buffer"><p><%= user.phone %></p></div>

  <div class="col-sm-12">
    <h3 class="h5">Default billing address:</h3>
    <p><%= user.show_billing_address %></p>
  </div>
  <div class="col-sm-12">
    <h3 class="h5">Default shipping address:</h3>
    <p><%= user.show_shipping_address %></p>

    <ul class="list-unstyled">
      <li><%= link_to "Edit #{user.full_name}'s information", edit_admin_user_path(user) %></li>
      <li><%= link_to "Delete #{user.full_name}",
                      admin_user_path(user),
                      method: :delete,
                      data: {
                          confirm: "You sure you want to delete user #{user.full_name}?"
                      } %>
      </li>
      <li><%= link_to 'View saved addresses', admin_user_addresses_path(user) %></li>
      <li><%= link_to 'View unplaced order (Cart)', admin_user_order_path(user, user.cart) %></li>
    </ul>
  </div>
</div>