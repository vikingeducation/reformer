<!DOCTYPE html>
<html>
<head>
  <title>Reformer: Admin Portal</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <section class="container-fluid">
    <div class="row">
      <h1 class="col-sm-12 text-center">Viking Store Admin Portal</h1>
    </div>

    <div class="row">
      <div class="col-sm-3 mr-1">
        <section class="navigation">
          <nav class="nav flex-column nav-pills text-center">
            <a href="#" class="nav-link">Users</a>
            <a href="#" class="nav-link">Addresses</a>
            <a href="#" class="nav-link">Orders</a>
            <%= link_to 'Products', admin_products_path, class: 'nav-link' %>
            <%= link_to 'Categories', admin_categories_path, class: 'nav-link' %>
            <hr class="w-75">
            <a href="#" class="nav-link">Analytics Dashboard</a>
          </nav>
        </section>
      </div>

      <div class="col-sm-8">
        <% flash.each do |type, message| %>
            <div class="row">
              <div class="alert alert-<%= type %> alert-dismissible fade show col-sm-12 m-auto" role="alert">
                <button type="button" class="close btn-sm" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <%= message %>
              </div>
            </div>
        <% end %>


        <div class="row">
          <div class="col-sm-12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>


  </section>

</body>
</html>
