form action="/users" accept-charset="UTF-8" method="post"
  input type="hidden" name="utf8" value="&#x2713;"
  input type="hidden" name="authenticity_token" value="#{form_authenticity_token}"
  label for="user_username" Username
  input type="text" name="user[username]" id="user_username" value="#{@user.username}"
  label for="user_email" Email
  input type="email" name="user[email]" id="user_email" value="#{@user.email}"
  label for="user_password" Password
  input type="password" name="user[password]" id="user_password"
  input type="submit"


hr
= form_tag users_path do
  = label_tag 'username'
  = text_field_tag 'username', @user.username
  = label_tag 'email'
  = email_field_tag 'email', @user.email
  = label_tag 'password'
  = password_field_tag 'password', @user.password
  = submit_tag "Submit"

hr

= form_for @user do |f|
  = f.label :username, "Your user name here: "
  = f.text_field :username, value: 'hi123'
  = f.label :email
  = f.email_field :email,  placeholder: 'email@example.com'
  = f.label :password
  = f.password_field :password
  = f.submit
