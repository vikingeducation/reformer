<h1>Hello, world! Make a new user in 3 magical ways!</h1>

<p id="notice"><%= flash[:notice] %></p>


<form accept-charset="UTF-8" action = "/users" method ="post">
  <label for="email">
    Email:
  </label>
  <input type = "email" id = "email" name = "[user][email]"/>
  <label>
    Username: 
    <input type = "text" id = "username" name = "[user][username]"/>
  </label>
  <label>
    Password: 
    <input type = "password" id = "password" name = "[user][password]"/>
  </label>
  <input type="hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>">
  <input type = "submit" id = "new-user-submit" name ="[user][submitted]"/>
</form>

<%= form_tag "/users" do %>
  <%= label_tag "email" %>
  <%= field_with_errors(@user, :email) %>

  <%= label_tag "username" %>
  <%= field_with_errors(@user, :username) %>


  <%= label_tag "password" %>
  <%= field_with_errors(@user, :password) %>

  <%= submit_tag %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email, "Enter your email: " %>
  <%= f.email_field :email, placeholder: "email@email.com" %>
  <%= f.label :username, "This is a custom label." %>
  <%= f.text_field :username, value: :guest %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>

<p>
  <%= link_to "Back to index", root_path %>
</p>