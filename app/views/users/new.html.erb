<%= form_for @user do |f|%>
  <%= f.label "Your username here"%>
  <%= f.text_field :username %>
  <%= f.label @user.errors[:username].first, class: "error" unless @user.errors[:username].empty? %>

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "admin@example.com" %>
  <%= f.label @user.errors[:email].first, class: "error" unless @user.errors[:email].empty? %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label @user.errors[:password].first, class: "error" unless @user.errors[:password].empty? %>

