<%= form_tag('/users') do %>
  <%= label_tag 'username', 'Username:' %>
  <%= text_field_tag('user[username]') %>

  <%= label_tag 'email', 'Email:' %>
  <%= text_field_tag('user[email]') %>

  <%= label_tag 'password', 'Password:' %>
  <%= password_field_tag('user[password]') %>

  <%= submit_tag %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username do %>
    Username: <%= @user.errors[:username].first if @user.errors[:username] %>
  <% end %>
  <%= f.text_field :username, value: 'Test' %>


  <%= f.label :email do %>
    Email: <%= @user.errors[:email].first if @user.errors[:email] %>
  <% end %>
  <%= f.text_field :email, placeholder: 'test@example.com' %>


  <%= f.label :password do %>
    Password: <%= @user.errors[:password].first if @user.errors[:password] %>
  <% end %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>