<h3>Fix <%= @user.errors.count%> errors below to complete the form.</h3>
<% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>

<%= form_for @user, url: {action: "create"} do |f| %>
  Username:
  <%= f.text_field :username, placeholder: "example" %>
  Email:
  <%= f.text_field :email, placeholder: "example@example.com" %>
  Password:
  <%= f.password_field :password, placeholder: "qwer12313425@w4" %>
  <%= f.submit "Create"%>
<% end %>


