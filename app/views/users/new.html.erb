<h3>form_for</h3>
<%= form_for @user, html: { :class => "my_class" } do |f| %>
  <%= f.label(:username, "Username goes here:", :class => "label_class") %>
  <%= field_with_errors(@user, :username)  %>
  <%= f.text_field(:username, placeholder: "Your user name here") %>
  <%= f.label(:email, "Email:", :class => "label_class") %>
  <%= field_with_errors(@user, :email)  %>
  <%= f.email_field(:email, placeholder: "example@example.com") %>
  <%= f.label(:password, "Password:", :class => "label_class") %>
  <%= f.password_field(:password) %>
  <%= f.submit "Submit" %>
<% end %>




