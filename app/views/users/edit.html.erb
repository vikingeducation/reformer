<h3>Edit a User</h3>
<%= form_for @user do |f| %>

  <%= form_field_error_message(@user, :email) %>
  <%= f.label :email, 'Enter your email:' %>
  <%= f.email_field :email %>

  <%= form_field_error_message(@user, :username) %>
  <%= f.label :username, 'This is a custom label.' %>
  <%= f.text_field :username %>

  <%= form_field_error_message(@user, :password) %>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %>

  <%= f.submit 'Update User' %>
<% end %>