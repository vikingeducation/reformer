<%= form_for @user do |f| %>

  <%= f.label :username do %>
    Username: <%= @user.errors[:username].first if @user.errors[:username] %>
  <% end %>

  <%= f.text_field :username, value: @user[:username] %>

  <%= f.label :email do %>
    Email: <%= @user.errors[:email].first if @user.errors[:email] %>
  <% end %>

  <%= f.text_field :email, placeholder: @user[:email] %>

  <%= f.label :password do %>
    Password: <%= @user.errors[:password].first if @user.errors[:password] %>
  <% end %>

  <%= f.password_field :password %>

  <%= f.submit %>

<% end %>