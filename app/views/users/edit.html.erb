<h1>Edit User - Basic Form</h1>

<%= @message %>
<form accept-charset="utf8" action="/users/<%= @user.id %>" method="post">
<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >
<input name="_method" type="hidden" value="patch" />
	<label>
		Email: 
		<input type="text" id="email" name="user[email]" value=<%= @user.email %> />
	</label>
	<br>
	<br>
	<label>
		Username: 
		<input type="text" id="username" name="user[username]" value=<%= @user.username%> />
	</label>
	<br>
	<br>
	<label>
		Password: 
		<input type="password" id="password" name="user[password]" value=<%= @user.password%>/>
	</label>
	<br>
	<br>
	<input type="submit" value="Create">
</form>

<br>

<h1>Edit User - Form Tag Edition</h1>

<%= form_tag user_path, :method => "patch" do %>
	<%= label_tag(:user_email, "Email: ") %>
	<%= text_field_tag :email, @user.email %>
	<br>
	<br>
	<%= label_tag(:user_username, "Username: ") %>
	<%= text_field_tag :username, @user.username %>
	<br>
	<br>
	<%= label_tag(:user_password, "Password: ") %>
	<%= password_field_tag :password, @user.password %>
	<br>
	<br>
	<%= submit_tag("Create") %>
<% end %>

<br>

<h1>Edit User - Form For Edition</h1>

<%= form_for @user do |f| %>
	<%= f.label :email, "Email: " %>
	<%= f.text_field :email, :placeholder => "example@example.com" %>
	<br>
	<br>
	<%= f.label :username, "Username: " %>
	<%= f.text_field :username %>
	<br>
	<br>
	<%= f.label :password, "Password: " %>
	<%= f.password_field :password, :value=>@user.password %>
	<br>
	<br>
	<%= f.submit "Create" %>
<% end %>
