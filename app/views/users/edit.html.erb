<h1>Edit a User</h1>


 <%= form_for @user do |f| %>
   <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <%= f.label :username %>:
  <%= f.text_field :username %>
  <%= f.label :email %>:
  <%= f.text_field :email %>
  <%= f.label :password %>:
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<% end %>


