<!-- form_tag Form -->
<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:user_email, "Email: ") %>
  <%= text_field_tag(:user_email) %><br>
  <%= label_tag(:user_username, "Username: ") %>
  <%= text_field_tag(:user_username) %><br>  
  <%= label_tag(:user_password, "Password: ") %>
  <%= password_field_tag(:password, "Type password") %><br>
  <%= submit_tag("Submit") %>
<% end %>

<!-- form_for Form -->
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.submit "Submit" %>
<% end %>


